@model BlogApp.Models.Comment

@{
    ViewBag.Title = "Edit Comment";
    ViewBag.Heading = "Edit Comment";
    ViewBag.SubHeading = "Built with ASP.NET MVC 5";
}

<div class="row">
    <div class="col-lg-8 col-lg-offset-2">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-lg-10">
                    @Html.TextAreaFor(model => model.Body, new { @class = "form-control", @rows = "4" })
                    @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UpdateReason, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-lg-10">
                    @Html.EditorFor(model => model.UpdateReason, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UpdateReason, "", new { @class = "text-danger" })
                </div>
            </div>

            <hr />

            <div class="form-group">
                <div class="col-lg-10">
                    <a class="btn btn-default" href=@Url.Action("Index", new { postSlug = Model.Post.Slug})>
                        Back to Comments&ensp;<i class="fas fa-chevron-left"></i>
                    </a>
                    <button type="submit" class="btn btn-default">Save&ensp;<i class="fas fa-save"></i></button>
                </div>
            </div>

        </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
